<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.PIDev3A18.projet.ChatbotController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    <children>
        <TextArea fx:id="chatHistory" editable="false" prefHeight="300" wrapText="true">
            <font>
                <Font name="Segoe UI" size="16.0" />
            </font>
        </TextArea>
        <HBox spacing="5">
            <TextField fx:id="userInputField" prefWidth="200" promptText="Ask me about projects..." />
            <Button fx:id="sendButton" text="Send" />
        </HBox>
    </children>
</VBox>