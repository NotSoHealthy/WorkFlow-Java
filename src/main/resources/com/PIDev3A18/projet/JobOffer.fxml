<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="720.0" prefWidth="1080.0" stylesheets="@css/signup.css" styleClass="page"
           xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.PIDev3A18.projet.JobOfferController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" spacing="20.0" styleClass="main-panel" prefWidth="600">
               <padding>
                  <Insets top="30" right="30" bottom="30" left="30"/>
               </padding>
               <children>
                  <!-- Form Title -->
                  <Text text="Job Offer Creation" styleClass="title-text">
                     <font>
                        <Font size="24.0"/>
                     </font>
                  </Text>

                  <!-- Job Offer Form Fields -->
                  <VBox alignment="CENTER_LEFT" spacing="15.0">
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <children>
                           <Label text="Title:" styleClass="form-label"/>
                           <TextField fx:id="title" promptText="Enter job title" prefHeight="40"/>
                        </children>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <children>
                           <Label text="Description:" styleClass="form-label"/>
                           <TextField fx:id="Description" promptText="Enter job description" prefHeight="40"/>
                        </children>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <children>
                           <Label text="Expiration Date:" styleClass="form-label"/>
                           <DatePicker fx:id="ExpirationDate" prefHeight="40"/>
                        </children>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <children>
                           <Label text="Contract Type:" styleClass="form-label"/>
                           <TextField fx:id="ContractType" promptText="Enter contract type" prefHeight="40"/>
                        </children>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <children>
                           <Label text="Salary:" styleClass="form-label"/>
                           <TextField fx:id="Salary" promptText="Enter salary" prefHeight="40"/>
                        </children>
                     </HBox>
                  </VBox>

                  <!-- Submit Button -->
                  <Button fx:id="SubmitBtn" onAction="#SubmitBtn" text="Submit" prefHeight="35" styleClass="btn-connect"/>

                  <!-- Job Offers Table -->
                  <TableView fx:id="ShowJobOffer" prefHeight="250" prefWidth="750" styleClass="table-view">
                     <columns>
                        <TableColumn fx:id="colJobID" text="Job ID" styleClass="table-column"/>
                        <TableColumn fx:id="colTitle" text="Title" styleClass="table-column"/>
                        <TableColumn fx:id="colDescription" text="Description" styleClass="table-column"/>
                        <TableColumn fx:id="colContractType" text="Contract Type" styleClass="table-column"/>
                        <TableColumn fx:id="colSalary" text="Salary" styleClass="table-column"/>
                        <TableColumn fx:id="colEmployee" text="Posted By" styleClass="table-column"/>
                     </columns>
                  </TableView>

                  <!-- Action Buttons for Selected Job Offer -->
                  <HBox alignment="CENTER" spacing="20">
                     <children>
                        <Button fx:id="DeleteBtn" onAction="#DeleteBtn" text="Delete" prefHeight="35" styleClass="btn-connect"/>
                        <Button fx:id="UpdtateBtn" onAction="#UpdtateBtn" text="Update" prefHeight="35" styleClass="btn-connect"/>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
