<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="main-page" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.PIDev3A18.projet.MainController">



   <!-- Top Navigation Bar -->
   <top>
      <HBox alignment="CENTER" spacing="20" styleClass="top-bar">
         <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
         </padding>
         <Button fx:id="ApplyBtn" onAction="#ApplyBtn" prefHeight="36" prefWidth="100" styleClass="btn-primary" text="JobOffer" />
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="SignIn" onAction="#SignIn" prefHeight="36" prefWidth="100" styleClass="btn-secondary" text="Sign In" />
      </HBox>
   </top>

   <!-- Center Section: Hero Area -->
   <center>
      <StackPane styleClass="hero-section">
         <!-- Optional overlay for readability -->
         <StackPane style="-fx-background-color: rgba(0, 0, 0, 0.3);" />
         <VBox alignment="CENTER" prefHeight="604.0" prefWidth="1050.0" spacing="30" styleClass="hero-content">
            <Label styleClass="hero-title" text="WorkFlow">
               <font>
                  <Font name="System Bold" size="60" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="40">
               <!-- Feature 1 -->
               <VBox alignment="CENTER" spacing="15" styleClass="feature-box">
                  <ImageView fitHeight="200" fitWidth="280" pickOnBounds="true" styleClass="feature-image">
                     <image>
                        <Image url="@background.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="feature-title" text="Efficient HR Management" />
                  <Label styleClass="feature-desc" text="Streamline your HR processes with our comprehensive tools." wrapText="true" />
               </VBox>
               <!-- Feature 2 -->
               <VBox alignment="CENTER" spacing="15" styleClass="feature-box">
                  <ImageView fitHeight="200" fitWidth="280" pickOnBounds="true" styleClass="feature-image">
                     <image>
                        <Image url="@background2.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="feature-title" text="Employee Engagement" />
                  <Label styleClass="feature-desc" text="Boost engagement with innovative tools and features." wrapText="true" />
               </VBox>
               <!-- Feature 3 -->
               <VBox alignment="CENTER" spacing="15" styleClass="feature-box">
                  <ImageView fitHeight="200" fitWidth="280" pickOnBounds="true" styleClass="feature-image">
                     <image>
                        <Image url="@background3.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="feature-title" text="Recruitment Made Easy" />
                  <Label styleClass="feature-desc" text="Simplify recruitment with our advanced hiring tools." wrapText="true" />
               </VBox>
            </HBox>
         </VBox>
      </StackPane>
   </center>

   <!-- Overall Padding -->
   <padding>
      <Insets bottom="40" left="40" right="40" top="20" />
   </padding>
</BorderPane>
