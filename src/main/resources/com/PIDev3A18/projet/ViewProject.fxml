<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="20" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@css/Project.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.PIDev3A18.projet.ViewProjectController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title Section -->
    <HBox alignment="CENTER" prefHeight="70.0" prefWidth="100">
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="View Projects" styleClass="title-text">
                <font>
                    <Font name="Segoe UI" size="36.0" />
                </font>
            </Text>
        </children>
    </HBox>

    <!-- ListView to Display Projects -->
    <ListView fx:id="ShowProject" prefHeight="400.0" prefWidth="100" styleClass="list-view" />

    <!-- Buttons Section -->
    <HBox alignment="CENTER" spacing="30">
        <children>
            <Button fx:id="DeleteBtn" text="Supprimer" styleClass="delete-button" onAction="#deleteProject" />
            <Button fx:id="UpdateBtn" text="Modifier" styleClass="update-button" onAction="#updateProject" />
        </children>
    </HBox>
</VBox>
