<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.PIDev3A18.projet.EditTaskFormController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextArea fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="statusChoice" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Priority:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="priorityChoice" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Due Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Button text="Save Changes" onAction="#handleSaveTask" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>

